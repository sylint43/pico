    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'pico'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=pico"
                ],
                "filter": {
                    "name": "pico",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'pico'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=pico",
                    "--package=pico"
                ],
                "filter": {
                    "name": "pico",
                    "kind": "bin"
                }
            },
            "args": [
                "-i",
                "IMG_0978.JPG",
                "pixel-sort",
                "--interval",
                "threshold",
                "-l",
                "0.2",
                "-u",
                "0.5"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'pico'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=pico",
                    "--package=pico"
                ],
                "filter": {
                    "name": "pico",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}